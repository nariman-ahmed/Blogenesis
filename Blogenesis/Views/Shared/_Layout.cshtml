<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blogenesis</title>
    <link rel="icon" href="~/favicon.png" type="image/png" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="min-h-screen bg-gray-50">
    <header>
        <nav class="bg-white shadow-lg">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex">
                        <a class="flex-shrink-0 flex items-center text-blue-600 font-bold text-xl" asp-controller="Home" asp-action="Index">
                            Blogenesis
                        </a>
                        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                            <a class="inline-flex items-center px-1 pt-1 text-gray-700 hover:text-blue-600" asp-controller="Home" asp-action="Index" asp-fragment="trending-blogs">
                                Trending
                            </a>
                            <a class="inline-flex items-center px-1 pt-1 text-gray-700 hover:text-blue-600" asp-controller="Blog" asp-action="Create">
                                Create Post
                            </a>
                            <a class="inline-flex items-center px-1 pt-1 text-gray-700 hover:text-blue-600" asp-controller="Blog" asp-action="MyBlogs">
                                My Blogs
                            </a>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        @RenderBody()
    </main>

    <footer class="bg-white border-t mt-auto">
        <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <p class="text-center text-gray-500 text-sm">
                &copy; 2025 - Blogenesis
            </p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
