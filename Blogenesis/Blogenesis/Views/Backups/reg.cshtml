@model Blogenesis.DTO.RegisterDto

@{
    ViewData["Title"] = "reg";
}

<div class="max-w-md mx-auto mt-10">
    <div class="bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-6 text-gray-900">Register</h2>

        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="mb-4">
                <label asp-for="FirstName" class="block text-gray-700 text-sm font-bold mb-2">First Name</label>
                <input asp-for="FirstName" class="form-input w-full" placeholder="Enter your first name">
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="LastName" class="block text-gray-700 text-sm font-bold mb-2">Last Name</label>
                <input asp-for="LastName" class="form-input w-full" placeholder="Enter your last name">
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input asp-for="Email" class="form-input w-full" type="email" placeholder="Enter your email">
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                <input asp-for="Password" class="form-input w-full" type="password" placeholder="Choose a password">
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-6">
                <label asp-for="ConfirmPassword" class="block text-gray-700 text-sm font-bold mb-2">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-input w-full" type="password" placeholder="Confirm your password">
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center justify-between mb-6">
                <button type="submit" class="btn-primary">
                    Register
                </button>
                <a asp-controller="Account" asp-action="Login" class="text-blue-600 hover:text-blue-800 text-sm">
                    Already have an account? Login
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
