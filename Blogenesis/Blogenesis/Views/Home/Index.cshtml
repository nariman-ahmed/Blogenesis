@model List<BlogModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="space-y-6">
    <div class="text-center max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">Welcome to Blogenesis</h1>
        <p class="mt-3 text-xl text-gray-500 sm:mt-4">Discover stories, ideas, and expertise from writers on any topic.</p>
    </div>

    <div class="max-w-4xl mx-auto">
        @if (Model != null && Model.Any())
        {
            <div class="space-y-8">
                @foreach(var blog in Model)
                {
                    <article class="bg-white shadow-sm rounded-lg overflow-hidden">
                        <div class="p-6">
                            <div class="flex items-center space-x-3">
                                <div class="flex-shrink-0">
                                    <span class="inline-block h-10 w-10 rounded-full bg-gray-200"></span>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-900">@(blog?.User?.FullName ?? blog?.User?.UserName ?? "Anonymous")</p>
                                    <p class="text-sm text-gray-500">@blog?.DateCreated.ToString("MMMM dd, yyyy")</p>
                                </div>
                            </div>
                            <a href="@Url.Action("Details", "Blog", new { id = blog?.Id })" class="block mt-4">
                                <h2 class="text-xl font-semibold text-gray-900 hover:text-blue-600">@blog?.Title</h2>
                                <p class="mt-3 text-base text-gray-500">
                                    @{
                                        // Remove HTML tags for preview and limit to first 200 characters
                                        var cleanContent = System.Text.RegularExpressions.Regex.Replace(blog?.Content ?? "", "<.*?>", " ");
                                        var previewContent = cleanContent.Length > 200 ? cleanContent.Substring(0, 200) + "..." : cleanContent;
                                    }
                                    @previewContent
                                </p>
                            </a>
                            <div class="mt-6 flex items-center">
                                <div class="flex space-x-1 text-sm text-gray-500">
                                    <span>@blog?.ReadTimeMinutes min read</span>
                                    <span>&middot;</span>
                                    <span class="capitalize">@blog?.Subject</span>
                                </div>
                            </div>
                        </div>
                    </article>
                }
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <h3 class="text-lg font-medium text-gray-900">No blogs yet</h3>
                <p class="mt-2 text-sm text-gray-500">Be the first to create a blog post!</p>
                <div class="mt-6">
                    <a href="@Url.Action("Create", "Blog")" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">
                        Create Your First Blog
                    </a>
                </div>
            </div>
        }
    </div>
</div>
