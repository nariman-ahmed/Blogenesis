@using Microsoft.AspNetCore.Identity
@using Blogenesis.Models
@inject SignInManager<UserModel> SignInManager
@inject UserManager<UserModel> UserManager

<div class="flex items-center space-x-4">
@if (SignInManager.IsSignedIn(User))
{
    <a class="text-gray-700 hover:text-blue-600" asp-controller="Account" asp-action="Index" title="Manage">
        Hello @(UserManager.GetUserName(User))!
    </a>
    <form asp-controller="Account" asp-action="Logout">
        <button type="submit" class="text-gray-700 hover:text-blue-600">
            Logout
        </button>
    </form>
}
else
{
    <a class="text-gray-700 hover:text-blue-600" asp-controller="Account" asp-action="Register">
        Register
    </a>
    <a class="px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700" asp-controller="Account" asp-action="Login">
        Login
    </a>
}
